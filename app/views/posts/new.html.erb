<h2>投稿フォーム</h2>
<%= form_with model: @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :image %>
  <%= f.file_field :image, accept: "image/*" %><br>

  <%= f.label :body %>
  <%= f.text_area :body %><br>

  <div class="form-group">
   <%= f.label :address, '場所' %>
   <%= f.text_field :address, class: 'form-control' %>
 </div>
  <%= f.submit '投稿' %>
<% end %>